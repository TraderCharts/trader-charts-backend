{
  "name": "trader-charts-backend",
  "version": "1.0.0",
  "description": "Trader Charts Backend",
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:traderchartsteam/trader-charts-backend.git"
  },
  "author": "Gonzalo Sanchez Cano <@sgonzaloc>",
  "private": true,
  "homepage": "https://github.com/sgonzaloc",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "lodash": "^4.17.21",
    "luxon": "^3.7.2",
    "mongodb": "^6.3.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.2",
    "nodemon": "^3.0.3",
    "pg": "^8.11.3",
    "sequelize": "^6.37.7",
    "winston": "^3.18.3"
  },
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "build-babel": "babel src --out-dir dist",
    "build": "npm run clean && npm run build-babel",
    "preinstall": "node scripts/preinstall.js",
    "prestart": "node scripts/prestart.js",
    "start": "npm run build && node ./dist/index.js",
    "start-mock": "cross-env PORT=3000 NODE_ENV=development LOAD_MOCK_DATA=true nodemon --exec babel-node src/index.js",
    "start-develop": "cross-env PORT=3000 NODE_ENV=development nodemon --exec babel-node src/index.js",
    "generate-swagger-api": "cross-env PORT=3002 NODE_ENV=development babel-node scripts/generateSwaggerApi.js",
    "tests": "mocha --require @babel/register -R spec tests/api.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/node": "^7.28.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/preset-env": "^7.28.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "express-oas-generator": "^1.0.48",
    "js-yaml": "^4.1.0",
    "mocha": "^10.8.2",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
